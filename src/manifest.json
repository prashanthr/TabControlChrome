{
  "manifest_version": 2,

  "name": "Tab Control",
  "description": "This extension allows the use of a few keyboard shortcuts to perform common tab actions",
  "version": "0.6",
  "icons": {"128": "tab.png"},
  "browser_action": {
    "default_icon": "tab.png",
    "default_popup": "master.html",
    "default_title": "Tab Control"
  },  
  "permissions": [
    "activeTab",    
    "storage", 
    "http://*/*", 
    "https://*/*",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["eventContentScript.js"]
    }
  ],
  "commands": {
    "duplicate-tab": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Duplicate Tab"
    },
    "mute-tab": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Alt+Shift+M"
      },
      "description": "Mute Tab"
    }
  }
}