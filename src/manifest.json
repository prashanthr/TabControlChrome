{
  "manifest_version": 2,

  "name": "Tab Control",
  "description": "This extension allows control of tabs from keyboard/mouse",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "master.html",
    "default_title": "Tab Control"
  },
  "permissions": [
    "activeTab",    
    "storage", 
    "http://*/*", 
    "https://*/*",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": ["keyboardEvents.js"],
    "persistent": false
  },
  "commands": {
    "next-tab": {
      "suggested_key": {
        "default": "Ctrl+Tab",
        "mac": "Command+Tab"
      },
      "description": "Go to next tab"
    },
    "previous-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Tab",
        "mac": "Command+Shift+Tab"
      },
      "description": "Go to previous tab"
    }
  }
}