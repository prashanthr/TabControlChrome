{
  "manifest_version": 2,

  "name": "Tab Control",
  "description": "This extension allows control of tabs from keyboard/mouse",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "master.html",
    "default_title": "Tab Control"
  },
  "permissions": [
    "activeTab",    
    "storage", 
    "http://*/*", 
    "https://*/*",
    "https://ajax.googleapis.com/",
    "input"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  },
  "commands": {
    "playPause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "global": true,
      "description": "Toggle play/pause"
    },   
    "first-tab": {
      "suggested_key": {
        "default": "Ctrl+1",
        "mac": "Command+1"
      },
      "description": "Go to first tab"
    },
    "previous-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Tab",
        "mac": "Command+Shift+Tab"
      },
      "description": "Go to previous tab"
    },
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle feature foo"
    }
  }
}